<div class="treatment-index">
  <div class="wraper">
    <div class="card-global">
    
      
      <div class="row">     
        <div class="col-xs-12 col-md-4 col-lg-4">
          <div class="card-index" style="width: 100%; height: 150px;">
            <%= @treatments.each do |trial| %>
              <h4><%=treatment.trial.title%></h4>
              <hr>
              <div class="col-xs-10 col-lg-10">
                <p><%=treatment.institution.name%>, <%=treatment.institution.adress%></p>
              </div>
              <% end %>
            <button type="submit" class="btn btn-default">Submit</button>
          </div>
        </div>

        <div class="col-xs-12 col-lg-8">
          <!-- Lines added for Geocoding -->
          <div id="map" style="width: 100%; height: 1000px;">
          
            <% content_for(:after_js) do %>
              <%= javascript_tag do %>
                $(document).ready(function() {
                  var handler = Gmaps.build('Google');
                  handler.buildMap({ internal: { id: 'map' } }, function() {
                    markers = handler.addMarkers(<%= raw @hash.to_json %>);
                    handler.bounds.extendWith(markers);
                    handler.fitMapToBounds();
                    if (markers.length == 0) {
                      handler.getMap().setZoom(2);
                    } else if (markers.length == 1) {
                      handler.getMap().setZoom(14);
                    }
                  });
                });
              <% end %>
            <% end %>      
          </div>
        </div>
      </div>
   
    </div>
 </div>
</div>
