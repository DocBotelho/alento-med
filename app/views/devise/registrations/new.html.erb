
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="container container-table">
    <div class="row vertical-center-row">
      <div class="col-md-6 col-md-offset-3 bg-info registration">
        <div class="row">
          <div class=" col-md-12">
            <%= f.input :name, placeholder: "Nome completo:", label: false, required: true %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= f.input :location, placeholder: "EndereÃ§o:", label: false, required: false %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <%= f.input :email, placeholder: "Email:", label: false, required: true, autofocus: true %>
          </div>
          <div class="col-md-6">
            <%= f.input :phone, placeholder: "Telefone para contato:", label: false, required: false %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <%= f.input :password, placeholder: "Senha:", label: false, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          </div>
          <div class="col-md-6">
            <%= f.input :password_confirmation, placeholder: "Digite a senha novamente:", label: false, required: true %>
          </div>
        </div>
          <div class="form-actions">
            <%= f.button :submit, "Criar conta", class: 'btn btn-primary btn-xl' %>
          </div>
          <% end %>
          <div class="text-center"><%- if devise_mapping.omniauthable? %>
            <%- resource_class.omniauth_providers.each do |provider| %>
            <%= link_to "Entrar com #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: 'btn btn-primary btn-xs' %><br />
            <% end -%>
          <% end -%>
        </div>
      </div>
    </div>



<br>
</div>
