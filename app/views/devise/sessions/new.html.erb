<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="text-center"><h2>Login</h2></div>
  <div class="container container-table">
    <div class="row vertical-center-row">
      <div class="col-md-4 col-md-offset-4 bg-info">
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false, label: "Senha:" %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?%>
          <br>
          <div class="row">
            <div class="form-actions">
              <%= f.button :submit, "Entrar", class: 'btn btn-primary btn-xs btn-block' %>
              <%- if devise_mapping.omniauthable? %>
                <%- resource_class.omniauth_providers.each do |provider| %>
                  <%= link_to "Entrar com #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: 'btn btn-primary btn-xs btn-block fa fa-facebook' %>
                <% end -%>
              <% end -%>
              <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: 'btn btn-danger btn-xs btn-block' %>
              <% end -%>
            </div>
          </div>
        </div>
      </div>
    </div>
    <br>
  </div>
<% end %>


