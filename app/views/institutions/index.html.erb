<div class="treatment-index">
  <div class="wraper">
    <div class="card-global">
      <div class="row">

        <div class="col-xs-12 col-md-4 col-lg-4">
          <% if @institutions.size == 0 %>
            <% if @condition == "" %>
              <div class="card-index" style="width: 100%;">
                <h4 class="text-center">
                 <strong>Pedimos desculpas!</strong>
                </h4>
                <p><%= "Por favor, informe sua condição clínica na barra de busca no topo da página" %></p>
              </div>
            <% else %>
              <div class="card-index" style="width: 100%;">
                <h4 class="text-center">
                 <strong>Pedimos desculpas!</strong>
                </h4>
                   <p><%= "ALENTO não encontrou estudos clínicos no Brasil que esteja recrutando pacientes para a \"#{@condition.downcase}\" no momento" %></p>
              </div>
            <% end %>

          <% else %>


            <div class="title-card">
              <% if @institutions.size == 1 %>
                <h4>ALENTO encontrou <strong>1</strong> centro clínico que oferece tratamento para "<%= @condition.downcase %>"</h4>
              <% else %>
                <h4>ALENTO encontrou <strong><%= @institutions.size %></strong> centros clínicos que oferecem tratamento para "<%= @condition.downcase %>"</h4>
              <% end %>
            </div>

            <!-- #Jos31, please verify if this line should be moved inside the div -->
            <% @institutions.each do |institution| %>
            <!-- #Jos31, please verify if this line should be moved inside the div -->

              <div class="card-index col-xs-12 col-lg-4">
              <!-- #Jos31, please verify why the card is breaking -->

                <h5><strong><%=institution.name%></strong></h5>
                <hr>

                <div class="">
                  <% @institution_conditions = [] %>
                  <% institution.trials.search_by_condition(@condition).each do |trial| %>
                    <% trial.condition.each do |condition| %>
                      <% @institution_conditions << condition %>
                    <% end %>
                  <% end %>
                  <p>oferece tratamento para: <%= @institution_conditions.join(", ") %></p>
                </div>

                <div class="">
                  <%= link_to "Conheça", institution_path(institution, condition: @condition), class: "btn btn-primary" %>
                </div>

              </div>

            <% end %>

          <% end %>
        </div>

        <div class="col-xs-12 col-lg-8">
          <!-- Lines added for Geocoding -->
          <div id="map" style="width: 100%; height: 800px;">

            <% content_for(:after_js) do %>
              <%= javascript_tag do %>
                $(document).ready(function() {
                  var handler = Gmaps.build('Google');
                  handler.buildMap({ internal: { id: 'map' } }, function() {
                    markers = handler.addMarkers(<%= raw @hash.to_json %>);
                    handler.bounds.extendWith(markers);
                    handler.fitMapToBounds();
                    if (markers.length == 0) {
                      handler.getMap().setZoom(2);
                    } else if (markers.length == 1) {
                      handler.getMap().setZoom(14);
                    }
                  });
                });
              <% end %>
            <% end %>
          </div>
        </div>
      </div>

    </div>
 </div>
</div>
