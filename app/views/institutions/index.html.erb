<div class="treatment-index">
  <div class="wraper">
    <div class="card-global">

      <div class="row">
        <div class="col-xs-12 col-md-4 col-lg-4">

            <% if @institutions.size > 0 %>
              <%= paginate @institutions %>
              <% @institutions.each do |institution| %>
                <!-- code added to avoid showing repeated info -->
                <% if @check != institution %>
                <!-- code added to avoid showing repeated info -->
                  <div class="card-index" style="width: 100%;">
                    <h4><%=institution.name%></h4>
                    <hr>
                    <div class="col-xs-12 col-lg-9">
                      <p><%=institution.address%></p>
                    </div>
                    <div class="col-xs-12 col-lg-3">
                      <%= button_to "Conheça", institution_path(institution), method: :get, class: "btn btn-primary" %>
                    </div>
                  '</div>
                <% end %>
                <!-- code added to avoid showing repeated info -->
                <% @check = institution %>
                <!-- code added to avoid showing repeated info -->
              <% end %>
            <% else %>
              <% if @condition == "" %>
                <div class="card-index" style="width: 100%;">
                  <h4 class="text-center">
                   <strong>Pedimos desculpas!</strong>
                  </h4>
                   <p><%= "Informe a condição clínica na barra de busca acima" %></p>
                </div>
              <% else %>
                <div class="card-index" style="width: 100%;">
                  <h4 class="text-center">
                   <strong>Pedimos desculpas!</strong>
                  </h4>
                   <p><%= "Não encontramos estudos clínicos no Brasil que esteja recrutando pacientes para a \"#{@condition}\" no momento" %></p>
                </div>
              <% end %>
            <% end %>
        </div>

        <div class="col-xs-12 col-lg-8">
          <!-- Lines added for Geocoding -->
          <div id="map" style="width: 100%; height: 1000px;">

            <% content_for(:after_js) do %>
              <%= javascript_tag do %>
                $(document).ready(function() {
                  var handler = Gmaps.build('Google');
                  handler.buildMap({ internal: { id: 'map' } }, function() {
                    markers = handler.addMarkers(<%= raw @hash.to_json %>);
                    handler.bounds.extendWith(markers);
                    handler.fitMapToBounds();
                    if (markers.length == 0) {
                      handler.getMap().setZoom(2);
                    } else if (markers.length == 1) {
                      handler.getMap().setZoom(14);
                    }
                  });
                });
              <% end %>
            <% end %>
          </div>
        </div>
      </div>

    </div>
 </div>
</div>
